---
import Timer from "../components/timer/Timer.astro";
import Layout from "src/layouts/Layout.astro";
import "../styles/global.css";
---

<Layout>
  <html lang="en">
    <body class="bg-black text-white m-0 p-0">
      <main class="grid grid-rows-[100px_1fr_100px] min-h-screen w-full">
        <div class="flex items-center px-10">
          <a
            href="/"
            class="text-gray-500 hover:text-white transition-colors flex items-center gap-2"
          >
            Exit Focus
          </a>
        </div>

        <div class="flex flex-col items-center justify-center gap-12">
          <h1
            class="text-gray-600 uppercase tracking-[0.6em] text-xs font-bold"
          >
            Zen Mode Active
          </h1>

          <div class="w-full max-w-xl px-4">
            <Timer />
          </div>
        </div>

        <div class="flex items-center justify-center">
          <p class="text-gray-800 text-[10px] uppercase tracking-[1em]">
            Deep Work
          </p>
        </div>
      </main>
    </body>
  </html>
</Layout>
