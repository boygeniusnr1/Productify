---
import Sidebar from "../components/ui/Sidebar.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout>
  <div class="flex">
    <Sidebar />
    <main class="pb-24 md:pb-0 md:ml-20 p-6 md:p-10 w-full max-w-7xl mx-auto">
      <h1 class="text-3xl font-black mb-8 tracking-tighter text-white">
        Manage Exercises
      </h1>

      <section
        class="bg-gray-900 border border-gray-800 p-6 md:p-8 rounded-3xl mb-10 shadow-xl"
      >
        <h2 class="text-xl font-bold mb-6 text-gray-200">Add New Exercise</h2>

        <div class="flex flex-col md:flex-row gap-4 items-end">
          <div class="w-full flex-1">
            <label
              class="block text-[10px] uppercase tracking-widest text-gray-500 mb-2 ml-1"
              >Exercise Name</label
            >
            <input
              type="text"
              id="ex-name"
              placeholder="e.g. Pushups"
              class="w-full bg-gray-800 border-none rounded-2xl px-5 py-3 text-white focus:ring-2 focus:ring-accent outline-none transition-all text-base"
            />
          </div>

          <div class="w-full md:w-32">
            <label
              class="block text-[10px] uppercase tracking-widest text-gray-500 mb-2 ml-1"
              >Daily Goal</label
            >
            <input
              type="number"
              id="ex-goal"
              placeholder="100"
              class="w-full bg-gray-800 border-none rounded-2xl px-5 py-3 text-white focus:ring-2 focus:ring-accent outline-none transition-all text-base"
            />
          </div>

          <button
            id="add-ex-btn"
            class="w-full md:w-auto bg-accent hover:bg-white text-black font-black py-3 px-8 rounded-2xl transition-all active:scale-95 h-[52px]"
          >
            ADD
          </button>
        </div>
      </section>

      <div id="manage-list" class="grid grid-cols-1 md:grid-cols-2 gap-4"></div>
    </main>
  </div>

  <script>
    import { exerciseList, addExercise } from "../lib/exerciseStore";

    const list = document.getElementById("manage-list");
    const addBtn = document.getElementById("add-ex-btn");
    const nameInput = document.getElementById("ex-name");
    const goalInput = document.getElementById("ex-goal");

    // 1. Render the List
    exerciseList.subscribe((exercises) => {
      if (!list) return;
      list.innerHTML = exercises
        .map(
          (ex) => `
        <div class="flex items-center justify-between bg-gray-900/50 p-5 rounded-3xl border border-gray-800 hover:border-gray-700 transition-colors">
          <div>
            <h3 class="font-bold text-lg text-white">${ex.name}</h3>
            <p class="text-xs text-gray-500 uppercase tracking-widest">Target: ${ex.goal} reps</p>
          </div>
          <button data-id="${ex.id}" class="delete-btn p-3 text-gray-600 hover:text-red-500 transition-colors flex items-center justify-center">
            <span class="material-symbols-rounded">delete</span>
          </button>
        </div>
      `,
        )
        .join("");

      // Handle Deletion
      list.querySelectorAll(".delete-btn").forEach((btn) => {
        btn.onclick = () => {
          const id = btn.dataset.id;
          if (confirm(`Delete ${exercises.find((e) => e.id === id)?.name}?`)) {
            exerciseList.set(exerciseList.get().filter((e) => e.id !== id));
          }
        };
      });
    });

    // 2. Handle Adding
    addBtn.onclick = () => {
      const name = nameInput.value.trim();
      const goal = parseInt(goalInput.value);

      if (name && goal > 0) {
        addExercise(name, goal);
        nameInput.value = "";
        goalInput.value = "";
      } else {
        alert("Please enter a valid name and goal.");
      }
    };
  </script>
</Layout>
